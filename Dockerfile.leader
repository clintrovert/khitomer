FROM golang:1.24-alpine AS builder

WORKDIR /build

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the leader service
RUN CGO_ENABLED=0 GOOS=linux go build -o leader ./cmd/leader

FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /app

COPY --from=builder /build/leader .

EXPOSE 8080 9090

CMD ["./leader"]

